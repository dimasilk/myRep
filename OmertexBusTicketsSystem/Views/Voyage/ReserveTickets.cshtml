@model OmertexBusTicketsSystem.ViewModels.TicketsContainerViewModel

@{
    ViewBag.Title = "ReserveTickets";
}

<h2>ReserveTickets</h2>


@using (Html.BeginForm("ReserveTickets", "Voyage"))
{
    <table width="100%">
        
@for (int i = 0; i < Model.TicketSimple.Count; i++)
{
    <tr>
        <td>
            @Html.CheckBoxFor(m => Model.TicketSimple[i].Checked)
            @Model.TicketSimple[i].SeatNumber.ToString()
            @Html.HiddenFor(m => Model.TicketSimple[i].Id)
            @Html.HiddenFor(m => Model.TicketSimple[i].Info)

           
        </td>
    </tr>
}
        <tr>
            <td>
                <input type="submit" value="Submit" />
            </td>
        </tr>
        <tr>
            <td>
            </td>
        </tr>
    </table>
}

